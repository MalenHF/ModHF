<configs>
	<append xpath="/buffs/buff[@name='buffStatusCheck01']/effect_group">
		<triggered_effect trigger="onSelfBuffStart" action="RemoveBuff" buff="chargeVulcan"/>
		<triggered_effect trigger="onSelfBuffStart" action="RemoveBuff" buff="CrimsondisplayB"/>
		<triggered_effect trigger="onSelfBuffStart" action="RemoveBuff" buff="CrimsondisplayA"/>
		<triggered_effect trigger="onSelfBuffStart" action="RemoveBuff" buff="buffrailguncharging"/>
		<triggered_effect trigger="onSelfBuffStart" action="RemoveBuff" buff="BalrogdisplayB"/>
		<triggered_effect trigger="onSelfBuffStart" action="RemoveBuff" buff="BalrogdisplayA"/>
		<triggered_effect trigger="onSelfBuffStart" action="RemoveBuff" buff="BalrogdisplayC"/>
		<triggered_effect trigger="onSelfBuffStart" action="RemoveBuff" buff="chargebalrog"/>
		<triggered_effect trigger="onSelfBuffStart" action="RemoveBuff" buff="chargeX12"/>
	</append>

	<append xpath="/buffs">


		


		<buff name="turretaugerdeco" hidden="true">
			<stack_type value="ignore"/>
			<effect_group>
				<triggered_effect trigger="onSelfBuffStart" action="SetTransformActive" active="false" parent_transform="Base" transform_path="BarrelMesh"/>
				<triggered_effect trigger="onSelfBuffStart" action="SetTransformActive" active="false" parent_transform="Gun" transform_path="turret_targeting"/>
			</effect_group>
		</buff>
		<buff name="DredisplayC" icon="ui_game_symbol_skull" icon_color="255,0,255" icon_blink="true">
			<stack_type value="ignore"/>
			<display_value value="$Drecharge"/>
			<effect_group>
				<triggered_effect trigger="onSelfBuffStart" action="RemoveBuff" buff="DredisplayA"/>
				<triggered_effect trigger="onSelfBuffStart" action="RemoveBuff" buff="DredisplayB"/>
				<triggered_effect trigger="onSelfBuffStart" action="PlaySound" sound="drone_wakeup"/>
				<triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$Drecharge" operation="set" value="10"/>
				<triggered_effect trigger="onSelfBuffStart" action="ModifyScreenEffect" effect_name="Dead" intensity="1" fade=".25"/>
				<triggered_effect trigger="onSelfBuffStart" action="ModifyScreenEffect" effect_name="Vibrant" intensity="0.5" fade=".25"/>
				<triggered_effect trigger="onSelfBuffRemove" action="PlaySound" sound="drone_wakeup"/>
				<triggered_effect trigger="onSelfBuffRemove" action="ModifyScreenEffect" effect_name="Vibrant" intensity="0" fade=".25"/>
				<triggered_effect trigger="onSelfBuffRemove" action="ModifyScreenEffect" effect_name="Dead" intensity="0" fade=".25"/>


				<passive_effect name="HealthSteal" operation="base_add" value=".5"/>
				<passive_effect name="WalkSpeed" operation="perc_add" value="0.5"/>
				<passive_effect name="RunSpeed" operation="perc_add" value="0.5"/>
				<passive_effect name="CrouchSpeed" operation="perc_add" value="0.5"/>
			</effect_group>
		</buff>
		<buff name="DredisplayB" icon="ui_game_symbol_skull" icon_color="0,255,0" icon_blink="true">
			<stack_type value="ignore"/>
			<display_value value="$Drecharge"/>
			<effect_group>
				<triggered_effect trigger="onSelfBuffStart" action="RemoveBuff" buff="DredisplayA"/>
				<triggered_effect trigger="onSelfBuffStart" action="RemoveBuff" buff="DredisplayC"/>
				<triggered_effect trigger="onSelfBuffStart" action="PlaySound" sound="drone_wakeup"/>
			</effect_group>
		</buff>
		<buff name="DredisplayA" icon="ui_game_symbol_skull" icon_color="100,100,100" icon_blink="false">
			<stack_type value="ignore"/>
			<display_value value="$Drecharge"/>
			<effect_group>
				<triggered_effect trigger="onSelfBuffStart" action="RemoveBuff" buff="DredisplayB"/>
				<triggered_effect trigger="onSelfBuffStart" action="RemoveBuff" buff="DredisplayC"/>
			</effect_group>
		</buff>
		<buff name="chargeDre" hidden="true">
			<stack_type value="ignore"/>
			<update_rate value=".1"/>
			<effect_group>
				<triggered_effect trigger="onSelfBuffUpdate" action="ModifyCVar" cvar="$Drecharge" operation="add" value="-.1">
					<requirement name="CVarCompare" cvar="$effectDre" operation="Equals" value="1"/>
					<requirement name="CVarCompare" cvar="$Drecharge" operation="GT" value="0"/>
				</triggered_effect>
				<triggered_effect trigger="onSelfBuffUpdate" action="ModifyCVar" cvar="$Drecharge" operation="set" value="0">
					<requirement name="CVarCompare" cvar="$Drecharge" operation="LT" value="0"/>
				</triggered_effect>
				<triggered_effect trigger="onSelfBuffUpdate" action="ModifyCVar" cvar="$effectDre" operation="set" value="0">
					<requirement name="CVarCompare" cvar="$Drecharge" operation="LTE" value="0"/>
				</triggered_effect>
				<triggered_effect trigger="onSelfBuffUpdate" action="AddBuff" buff="DredisplayA">
					<requirement name="CVarCompare" cvar="$effectDre" operation="Equals" value="0"/>
					<requirement name="CVarCompare" cvar="$Drecharge" operation="LT" value="20"/>
				</triggered_effect>
				<triggered_effect trigger="onSelfBuffUpdate" action="AddBuff" buff="DredisplayB">
					<requirement name="CVarCompare" cvar="$effectDre" operation="Equals" value="0"/>
					<requirement name="CVarCompare" cvar="$Drecharge" operation="GTE" value="20"/>
				</triggered_effect>
				<triggered_effect trigger="onSelfBuffUpdate" action="AddBuff" buff="DredisplayC">
					<requirement name="CVarCompare" cvar="$effectDre" operation="Equals" value="1"/>
				</triggered_effect>

				<triggered_effect trigger="onSelfBuffRemove" action="RemoveBuff" buff="DredisplayA"/>
				<triggered_effect trigger="onSelfBuffRemove" action="RemoveBuff" buff="DredisplayB"/>
				<triggered_effect trigger="onSelfBuffRemove" action="RemoveBuff" buff="DredisplayC"/>
				<triggered_effect trigger="onSelfBuffRemove" action="ModifyCVar" cvar="$Drecharge" operation="set" value="0"/>
				<triggered_effect trigger="onSelfBuffRemove" action="ModifyCVar" cvar="$effectDre" operation="set" value="0"/>
			</effect_group>
		</buff>
		

	</append>
</configs>