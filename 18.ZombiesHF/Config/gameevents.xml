<configs>
	<append xpath="/gameevents">
	
		<action_sequence name="DisarmPlayer">
			<property name="allow_while_dead" value="false" />         		
			<requirement class="HasHeld" />
			
			<action class="PlaySound">
				 <property name="sound" value="zombiefemalescoutalert" />
				<!--<property name="inside_head" value="true" />-->
				 <property name="phase" value="1" />
			 </action>
			
			<action class="DropHeldItem">
				<property name="phase" value="1"/>
				<property name="drop_sound" value="itemdropped" />
			</action>
		</action_sequence>	
		
		
		<action_sequence name="RoottingFood">
			<action class="ReplaceItems">
				<property name="phase" value="1" />
				<property name="items_location" value="Toolbelt,Backpack" />
				<property name="replaced_by_item" value="foodRottingFlesh" />
				<property name="items_tags" value="food" />
				<!-- <property name="target_group" value="players" /> -->
			</action>
		</action_sequence>

		<action_sequence name="bossSirenBehavior">
			<action class="Delay">
				<property name="phase" value="1" />
				<property name="time" value="2" />
			</action>
			<action class="RandomizeRotation">
				<property name="phase" value="2" />
			</action>
		</action_sequence>

		<action_sequence name="HelicopterHelicopteeer">
			<property name="category" value="twitch_actions" />
				
			<action class="RandomizeRotation">
				<property name="phase" value="1" />
			</action>				
			<action class="Delay">
				<property name="phase" value="1" />
				<property name="time" value="1" />
			</action>

			<action class="RandomizeRotation">
				<property name="phase" value="2" />
			</action>
			<action class="Delay">
				<property name="phase" value="2" />
				<property name="time" value="1" />
			</action>

			<action class="RandomizeRotation">
				<property name="phase" value="3" />
			</action>
			<action class="Delay">
				<property name="phase" value="3" />
				<property name="time" value="1" />
			</action>

			<action class="RandomizeRotation">
				<property name="phase" value="4" />
			</action>
			<action class="Delay">
				<property name="phase" value="4" />
				<property name="time" value="1" />
			</action>

			<action class="RandomizeRotation">
				<property name="phase" value="5" />
			</action>		
		</action_sequence>
	
		<action_sequence name="BossInfernalExplosion">
			<requirement class="NearbyEntities">
				<property name="max_distance" value="15" />
			</requirement>

			<action class="Delay">
				<property name="time" value="1" />
				<property name="phase" value="1" />
			</action>

			<action class="AddBuff">
				<property name="phase" value="1" />
				<property name="buff_name" value="twitch_blastresist" />
				<property name="target_group" value="zombies" />
			</action>

			<action class="PlaySound">
				<property name="phase" value="2" />
				<property name="sound" value="twitch_kaboom" />
			</action>

			<action class="Explode">
				<property name="phase" value="2" />
				<property name="blast_power" value="50" />
				<property name="block_damage" value="1" />
				<property name="block_radius" value="1" />
				<property name="entity_damage" value="3000" />
				<property name="entity_radius" value="1" />
			</action>

			<action class="Delay">
				<property name="time" value="1" />
				<property name="phase" value="3" />
			</action>

			<action class="RemoveBuff">
				<property name="phase" value="4" />
				<property name="buff_name" value="twitch_blastresist" />
			</action>
		</action_sequence>
	
		<action_sequence name="BossInfernalShinyExplosion">
			<requirement class="NearbyEntities">
				<property name="max_distance" value="20" />
			</requirement>

			<action class="Delay">
				<property name="time" value="1" />
				<property name="phase" value="1" />
			</action>

			<action class="AddBuff">
				<property name="phase" value="1" />
				<property name="buff_name" value="twitch_blastresist" />
				<property name="target_group" value="zombies" />
			</action>

			<action class="PlaySound">
				<property name="phase" value="2" />
				<property name="sound" value="twitch_kaboom" />
			</action>

			<action class="Explode">
				<property name="phase" value="2" />
				<property name="blast_power" value="50" />
				<property name="block_damage" value="1" />
				<property name="block_radius" value="1" />
				<property name="entity_damage" value="3500" />
				<property name="entity_radius" value="1" />
			</action>

			<action class="Delay">
				<property name="time" value="1" />
				<property name="phase" value="3" />
			</action>

			<action class="RemoveBuff">
				<property name="phase" value="4" />
				<property name="buff_name" value="twitch_blastresist" />
			</action>
		</action_sequence>

		<action_sequence name="Event_BossShockerRandomCamera">
			<requirement class="NearbyEntities">
				<property name="max_distance" value="15" />
			</requirement>				
			<action class="Delay">
				<property name="phase" value="1" />
				<property name="time" value="1" />
			</action>
				
			<action class="RandomizeRotation">
				<property name="phase" value="1" />
			</action>				
			<action class="Delay">
				<property name="phase" value="1" />
				<property name="time" value="1" />
			</action>

			<action class="RandomizeRotation">
				<property name="phase" value="2" />
			</action>
			<action class="Delay">
				<property name="phase" value="2" />
				<property name="time" value="1" />
			</action>

			<action class="RandomizeRotation">
				<property name="phase" value="3" />
			</action>
			<action class="Delay">
				<property name="phase" value="3" />
				<property name="time" value="1" />
			</action>

			<action class="RandomizeRotation">
				<property name="phase" value="4" />
			</action>
			<action class="Delay">
				<property name="phase" value="4" />
				<property name="time" value="1" />
			</action>

			<action class="RandomizeRotation">
				<property name="phase" value="5" />
			</action>		
		</action_sequence>		
	</append>
</configs>