<bhwCompleteCollection>
	<append xpath="/recipes">
	<!-- bhwModernCooking Edits Start -->
		<recipe name="modernCookingHelper" count="1" craft_area="workbench" tags="workbenchCrafting">
			<ingredient name="resourceForgedIron" count="10"/>
			<ingredient name="resourceElectricParts" count="4"/>
			<ingredient name="resourceMetalPipe" count="1"/>
		</recipe>
	<!-- Reinforced Entry Doors -->
		<recipe name="reinforcedEntryDoorHelper" count="1" craft_area="workbench" tags="workbenchCrafting">
			<ingredient name="resourceForgedSteel" count="10"/>
			<ingredient name="resourceSpring" count="1"/>
			<ingredient name="resourceMechanicalParts" count="5"/>
		</recipe>
	<!-- bhwSignage Edits Start -->	
		<recipe name="signRoadHelper" count="1" craft_area="workbench">
			<ingredient name="resourceScrapIron" count="20"/>
		</recipe>
		<recipe name="signShopLitHelper" count="1" craft_area="workbench">
			<ingredient name="resourceScrapIron" count="20"/>
			<ingredient name="resourceElectricParts" count="6"/>
			<ingredient name="resourceScrapPolymers" count="6"/>
		</recipe>
		<recipe name="signShopDarkHelper" count="1" craft_area="workbench">
			<ingredient name="resourceScrapIron" count="20"/>
			<ingredient name="resourceElectricParts" count="4"/>
			<ingredient name="resourceScrapPolymers" count="4"/>
		</recipe>
		<recipe name="signTraderJoelHelper" count="1" craft_area="workbench">
			<ingredient name="resourceWood" count="15"/>
		</recipe>		
	</append>
	<!-- Malen Garage doors variants -->	
	<set xpath="/recipes/recipe[@name='garageDoorHousePlayer']/@name">rollingGarageHelper</set>
	<set xpath="/recipes/recipe[@name='garageDoorIndustrial_Powered']/@name">reinforRollingGarageHelper</set>
</bhwCompleteCollection>