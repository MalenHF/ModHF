<config>
    <setattribute xpath="/twitch" name="nonsub_pp_cap">5000</setattribute>
    <setattribute xpath="/twitch" name="sub_pp_cap">10000</setattribute>
    <append xpath="/twitch">
        <!--Bosses-->
