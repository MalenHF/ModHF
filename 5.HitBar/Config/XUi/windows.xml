<configs>
	<remove xpath="/windows/window[@name='windowTargetBar']"/>
	<append xpath="/windows">
		<window name="windowTargetBar" controller="TargetBar" visibility="always">
			<rect pos="-180,-85" width="360" height="26" visible="{visible}">
				<sprite depth="0" sprite="ui_game_header_fill" pos="-3,3" width="366" height="32" type="sliced" color="0,0,0,200" foregroundlayer="true"/>
				<sprite depth="1" sprite="ui_game_header_fill" name="border" color="0,0,0,100" type="sliced" width="360" globalopacity="true"/>
				<filledsprite depth="2" sprite="ui_game_header_fill" name="BarContent" type="filled" color="200,0,0,250" width="360" fill="{fill}" globalopacity="true"/>
				<label depth="3" name="TextContent" pos="9,-4" font_size="18" color="[white]" justify="center" pivot="topleft" text="{name}:{currentwithmax}" height="30"/>
			</rect>
		</window>
	</append>
</configs>