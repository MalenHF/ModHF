<eihwaz.de>
<!-- Custom Kit -->

<!-- Icon -->
<!-- You can use any icon from /7 Days To Die/Data/ItemIcons-->
<set xpath="/items/item[@name='adp_kit']/property[@name='CustomIcon']/@value">cntHardenedChestSecure</set>

<!-- Loot -->
<!-- This is just an example. You can remove random items.-->
<remove xpath="/items/item[@name='adp_kit']/property[@class='Action0']" />
<append xpath="/items/item[@name='adp_kit']">
	<property class="Action0">
		<property name="Class" value="OpenBundle"/>
		<property name="Delay" value="0"/>
		<property name="Sound_start" value="chest_tier4_open"/> <!--change opening sound-->
		
		<property name="Create_item" value="drinkJarPureMineralWater,medicalFirstAidKit"/> <!--set fix loot-->
		<property name="Create_item_count" value="3,1-2"/> <!--set number of loot. values like 1-3 are possible-->
		
		<property name="Random_item" value="foodVegetableStew,foodMeatStew"/> <!--set random loot-->
		<property name="Random_item_count" value="3,3"/> <!--set number of loot. values like 1-3 are possible-->
		<property name="Random_count" value="1"/> <!--set number of picks-->
		<property name="Unique_random_only" value="true"/> <!--if same item can pick twice-->
	</property>
</append>
</eihwaz.de>